<%- include('../partials/header') %>
<section class="page-hero">
  <div class="container">
    <h1>Worker Panel</h1>
    <p>Manage your assigned tasks and updates.</p>
  </div>
</section>
<section class="section">
  <div class="container">
    <div class="card">
      <h2>Assigned Tasks</h2>
      <form method="POST" action="/worker/tasks">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <label>Tasks</label>
        <textarea name="assigned_tasks" rows="4" required><%= worker?.assigned_tasks || '' %></textarea>
        <label>Status</label>
        <select name="status" required>
          <option value="active" <%= worker?.status === 'active' ? 'selected' : '' %>>Active</option>
          <option value="paused" <%= worker?.status === 'paused' ? 'selected' : '' %>>Paused</option>
          <option value="completed" <%= worker?.status === 'completed' ? 'selected' : '' %>>Completed</option>
        </select>
        <button class="button primary" type="submit">Update Tasks</button>
      </form>
    </div>
  </div>
</section>
<%- include('../partials/footer') %>
