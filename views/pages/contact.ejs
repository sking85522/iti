<%- include('../partials/header') %>
<section class="page-hero">
  <div class="container">
    <h1>Contact Us</h1>
    <p>Tell us about your project or workflow challenges.</p>
  </div>
</section>
<section class="section">
  <div class="container grid-2">
    <div>
      <h2>Reach Techelevatex</h2>
      <p>Email: support@techelevatex.in</p>
      <p>We typically respond within 24 hours.</p>
    </div>
    <form class="card" method="POST" action="/contact">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <label>Name</label>
      <input type="text" placeholder="Your name" required />
      <label>Email</label>
      <input type="email" placeholder="Your email" required />
      <label>Message</label>
      <textarea rows="4" placeholder="Tell us more"></textarea>
      <button class="button primary" type="submit">Send Message</button>
    </form>
    <% if (success) { %>
      <div class="card">
        <h3>Message received</h3>
        <p>Our team will respond within 24 hours.</p>
      </div>
    <% } %>
  </div>
</section>
<%- include('../partials/footer') %>
